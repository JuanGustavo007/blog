<%- include("partials/header.ejs") %> <%- include("partials/navbar.ejs") %>
<div class="container container-cliente mt-5 p-5">
    <form>
        <div class="row">
            <div class="mb-3 col-6">
                <label for="nome" class="form-label">Nome</label>
                <input type="text" class="form-control" id="nome" placeholder="Digite seu nome" required />
            </div>
            <div class="mb-3 col-6">
                <label for="email" class="form-label">E-mail</label>
                <input type="email" class="form-control" id="email" placeholder="Digite seu e-mail" required />
            </div>
        </div>
        <div class="row">
            <div class="mb-3 col-6">
                <label for="telefone" class="form-label">Telefone</label>
                <input type="tel" class="form-control" id="telefone" placeholder="Digite seu telefone" required v-mask="'(##) ####-####'" />
            </div>
            <div class="mb-3 col-6">
                <label for="cpf_cnpj col-6" class="form-label">CPF/CNPJ</label>
                <input type="text" class="form-control" id="cpf_cnpj" placeholder="Digite seu CPF ou CNPJ" required />
            </div>
        </div>
        <button type="submit" class="btn btn-enviar">Enviar</button>
    </form>
</div>
<style>
    label {
        color: black;
    }
    .container-cliente {
        background-color: #dde6ed;
        border: 2px solid black;
    }
    input {
        border: 1px solid black;
    }
    .btn-enviar {
        display: inline-block;
        background-color: #4caf50;
        color: white;
        padding: 10px 20px;
        font-size: 16px;
        text-align: center;
        text-decoration: none;
        border-radius: 4px;
        transition: background-color 0.3s;
        cursor: pointer;
    }
    .btn-enviar:hover {
        background-color: #45a049;
    }
</style>
<%- include("partials/footer.ejs") %>
